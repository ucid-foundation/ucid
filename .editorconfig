# Top-most EditorConfig file
root = true

# ==============================================================================
# Default Settings for All Files
# ==============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88

# ==============================================================================
# Python Files
# ==============================================================================
[*.py]
indent_size = 4
max_line_length = 88

[*.pyi]
indent_size = 4
max_line_length = 88

# ==============================================================================
# YAML and JSON Configuration
# ==============================================================================
[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

# ==============================================================================
# TOML Configuration
# ==============================================================================
[*.toml]
indent_size = 4

[pyproject.toml]
indent_size = 4

# ==============================================================================
# Markdown Documentation
# ==============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ==============================================================================
# reStructuredText
# ==============================================================================
[*.rst]
indent_size = 3
max_line_length = 79

# ==============================================================================
# Shell Scripts
# ==============================================================================
[*.{sh,bash,zsh}]
indent_size = 2

# ==============================================================================
# Windows Scripts
# ==============================================================================
[*.{bat,cmd,ps1}]
end_of_line = crlf
indent_size = 4

# ==============================================================================
# Makefiles (require tabs)
# ==============================================================================
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# ==============================================================================
# Docker
# ==============================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# ==============================================================================
# Web Files
# ==============================================================================
[*.{html,htm}]
indent_size = 2

[*.css]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

# ==============================================================================
# SQL
# ==============================================================================
[*.sql]
indent_size = 2

# ==============================================================================
# Jupyter Notebooks
# ==============================================================================
[*.ipynb]
indent_size = 1
insert_final_newline = false

# ==============================================================================
# End of .editorconfig
# ==============================================================================
