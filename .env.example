# ==============================================================================
# Application Settings
# ==============================================================================
# Environment: development, staging, production
UCID_ENV=development

# Debug mode (disable in production)
UCID_DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
UCID_LOG_LEVEL=INFO

# Log format: json, text
UCID_LOG_FORMAT=text

# ==============================================================================
# API Server Configuration
# ==============================================================================
# API host and port
UCID_API_HOST=0.0.0.0
UCID_API_PORT=8000

# Number of worker processes
UCID_API_WORKERS=4

# Request timeout in seconds
UCID_API_TIMEOUT=30

# CORS allowed origins (comma-separated)
UCID_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==============================================================================
# Authentication
# ==============================================================================
# API key for authentication (generate a secure random key)
# Example: openssl rand -hex 32
UCID_API_KEY=dev-key-do-not-use-in-production

# JWT secret for token signing
UCID_JWT_SECRET=dev-jwt-secret-change-in-production

# JWT token expiration in hours
UCID_JWT_EXPIRATION_HOURS=24

# ==============================================================================
# Database Configuration (PostgreSQL + PostGIS)
# ==============================================================================
# Full connection URL
# UCID_DATABASE_URL=postgresql://user:password@localhost:5432/ucid

# Or individual components
UCID_DB_HOST=localhost
UCID_DB_PORT=5432
UCID_DB_NAME=ucid
UCID_DB_USER=ucid
UCID_DB_PASSWORD=

# Connection pool settings
UCID_DB_POOL_SIZE=10
UCID_DB_MAX_OVERFLOW=20
UCID_DB_POOL_RECYCLE=3600

# ==============================================================================
# Redis Cache Configuration
# ==============================================================================
# Redis connection URL
# UCID_REDIS_URL=redis://localhost:6379/0

# Or individual components
UCID_REDIS_HOST=localhost
UCID_REDIS_PORT=6379
UCID_REDIS_DB=0
UCID_REDIS_PASSWORD=

# Cache TTL in seconds
UCID_CACHE_TTL=3600

# ==============================================================================
# External Data Sources
# ==============================================================================
# Data directory for external sources
UCID_DATA_DIR=./data

# OSM Overpass API endpoint
UCID_OSM_OVERPASS_URL=https://overpass-api.de/api/interpreter

# OSM API rate limit (requests per minute)
UCID_OSM_RATE_LIMIT=60

# GTFS feed directory
UCID_GTFS_DIR=./data/gtfs

# ==============================================================================
# H3 Spatial Configuration
# ==============================================================================
# Default H3 resolution (7-11, default 9)
UCID_H3_DEFAULT_RESOLUTION=9

# Maximum cells per operation (prevent memory issues)
UCID_H3_MAX_CELLS=1000000

# ==============================================================================
# Context Scoring
# ==============================================================================
# Enable/disable specific contexts
UCID_CONTEXT_15MIN_ENABLED=true
UCID_CONTEXT_TRANSIT_ENABLED=true
UCID_CONTEXT_WALK_ENABLED=true

# Context scoring timeout in seconds
UCID_CONTEXT_TIMEOUT=30

# ==============================================================================
# Performance and Monitoring
# ==============================================================================
# Enable Prometheus metrics endpoint
UCID_METRICS_ENABLED=true
UCID_METRICS_PORT=9090

# Enable request tracing
UCID_TRACING_ENABLED=false
UCID_TRACING_ENDPOINT=http://localhost:14268/api/traces

# ==============================================================================
# Security
# ==============================================================================
# Rate limiting (requests per minute per IP)
UCID_RATE_LIMIT=100

# Maximum request body size in bytes
UCID_MAX_REQUEST_SIZE=10485760

# ==============================================================================
# Batch Processing
# ==============================================================================
# Default batch size
UCID_BATCH_SIZE=1000

# Maximum batch size allowed
UCID_MAX_BATCH_SIZE=10000

# ==============================================================================
# End of .env.example
# ==============================================================================
