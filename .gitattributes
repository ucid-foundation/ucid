# ==============================================================================
# Dockerfiles
# ==============================================================================
Dockerfile text eol=lf
Dockerfile.* text eol=lf
.dockerignore text eol=lf

# ==============================================================================
# Jupyter Notebooks
# ==============================================================================
*.ipynb text eol=lf

# ==============================================================================
# SQL
# ==============================================================================
*.sql text eol=lf

